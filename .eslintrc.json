{
    "env": {
        "es6": true,
        "node": true
     },
     "parserOptions": {
       "ecmaVersion": 6,
       "ecmaFeatures": {
           "jsx": true
       }
     },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "jshint.options": {
            "esversion": 6
        }
    }
}